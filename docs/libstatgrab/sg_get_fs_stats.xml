<refentry id="sg_get_fs_stats">

  <refentryinfo>
    <date>$Date$</date>
    <releaseinfo>$Id$</releaseinfo>
  </refentryinfo>

  <refmeta>
    <refentrytitle>sg_get_fs_stats</refentrytitle>
